Page {
  background-color: black;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}

.root {
  display: flex;
  flex-direction: column;
}

.movie {
  display: flex;
  flex-direction: row;
  height: 20%;
  padding: 10px;
  margin-left: 25rpx
}

.image {
  height: 340rpx;
  width: 340rpx;
  justify-content: center;
}

.content {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.title {
  color: white;
  font-size: 18px;
  margin-left: 10px;
}

.description {
  display: -webkit-box;
  -webkit-line-clamp: 6;
  word-break: break-all;
  -webkit-box-orient: vertical;
  color: #bbb;
  font-size: 12px;
  line-height: 20px;
  margin: 10px;
  text-overflow: ellipsis;
  overflow: hidden;
}

.des {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.backgroud {
  width: 90%;
  height: 135px;
  background-color: #ffffff67;
  margin: 10px;
  border-radius: 10px;
}

text {
  font-size: 13px;
  color: #bbb;
  margin-left: 20rpx;
  margin-top: 6rpx;
  align-items: center
}

.assetstyle{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.protagonist{
  display: flex;
  flex-direction: row;
  align-items: center
}

.watch{
  display: flex;
  flex-direction: row;
  margin-left: 35rpx;
  margin-top: 40rpx
}