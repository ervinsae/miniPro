Page {
  background-color: black;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}

.root {
  display: flex;
  flex-direction: column;
}

.movie {
  display: flex;
  flex-direction: row;
  height: 20%;
  padding: 20rpx;
  margin-left: 20rpx;
}

.image_top {
  height: 340rpx;
  width: 320rpx;
  justify-content: center;
}

.content {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.title {
  color: white;
  font-size: 18px;
  margin-left: 10px;
  margin-top: 0px;
}

.description {
  display: -webkit-box;
  -webkit-line-clamp: 6;
  word-break: break-all;
  -webkit-box-orient: vertical;
  color: #bbb;
  font-size: 12px;
  line-height: 36rpx;
  margin: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.des {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.backgroud {
  width: 90%;
  height: 135px;
  background-color: #ffffff67;
  margin: 10px;
  border-radius: 10px;
}

text {
  font-size: 13px;
  color: #bbb;
  margin-left: 20rpx;
  margin-top: 6rpx;
  align-items: center;
}

.assetstyle {
  /* display: flex; *//* flex-direction: column; *//* background-color: #000;
  font-size: 14px;
  align-items: center; *//* border-bottom: 1rpx solid #f5f5f5; */
  position: relative;
  display: inline-block;
  border-bottom: 10rpx solid #000;
}

.protagonist {
  display: flex;
  flex-direction: row;
}

.watch {
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  margin-top: 40rpx;
}

.text_content {
  position: absolute;
  top: 0;
  width: 100%;
  text-align: left;
  background: #000;
  color: #fff;
  opacity: 0.5;
}
